<div class="container">
  <h2 class="text-center my-4">Orders</h2>
  <div class="accordion" id="accordionExample">
    <% @orders.group_by { |order| order.token }
       .sort_by { |token, orders| orders.max_by(&:created_at).created_at }
       .reverse_each do |token, orders| %>
      <div class="card">
        <div class="card-header" id="heading<%= token %>">
          <h2 class="mb-0">
            <button class="btn btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse<%= token %>" aria-expanded="true" aria-controls="collapse<%= token %>">
              <div class="d-flex justify-content-between">
                <div>Order_Id: <%= token%></div>
                <div>Purchased at: <%= time_ago_in_words(orders.first.updated_at) %> ago</div>
                <div>&#8377 <%= orders.pluck(:price).sum %></div>
              </div>
            </button>
          </h2>
        </div>
        <div id="collapse<%= token %>" class="collapse" aria-labelledby="heading<%= token %>" data-parent="#accordionExample">
          <div class="card-body container">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Username</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Price</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                <% cnt = 1 %>
                <% orders.each do |order| %>
                  <tr>
                    <th scope="row"><%= cnt %></th>
                    <td><%= order.item.name %></td>
                    <td><%= order.quantity %></td>
                    <td>(&#8377)<%= order.price %></td>
                    <td><%= link_to 'FulFill', fulfill_order_path(order), class: 'btn btn-sm btn-success'%>
                    <%= link_to 'Unavailable', unfulfill_order_path(order), class: 'btn btn-sm btn-danger'%></td>
                  </tr>
                  <% cnt += 1 %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
