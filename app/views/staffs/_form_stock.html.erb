
  <%= render 'shared/errors', obj: @item %>
  <%= form_with(model: @item, local: true, html: { class: '' }) do |f| %>
    <div class="form-group mb-1">
      <%= f.label :item_name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mb-1">
      <%= f.label :quantity %>
      <%= f.number_field :quantity, class: 'form-control' %>
    </div>
    <div class="form-group mb-1">
      <%= f.label :cost %>(&#8377)
      <%= f.number_field :price, class: 'form-control', step: '0.01' %>
    </div>
    
    <%= f.submit @item.new_record? ? "Add Item" : "Update", class: 'btn btn-primary btn-sm' %>
    
  <% end %>

