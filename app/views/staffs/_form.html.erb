<div class="container my-4">
  <%= render 'shared/errors', obj:@staff%>
  <%= form_with(model: @staff, local: true, html: { class: 'd-flex flex-column align-items-center' }) do |f| %>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control'%>
    </div>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control'%>
    </div>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control'%>
    </div>
    <% if @staff.new_record?%>
      <div class="form-group mb-3 col-md-6">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control'%>
      </div>
    <%end%>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :phone_no %>
      <%= f.text_field :phone_no, class: 'form-control'%>
    </div>
    <%= f.submit @staff.new_record? ? "Sign Up" : "Update", class: 'btn btn-primary'%>
    <% if !@staff.new_record? && @staff.errors.full_messages.length > 0%>
    <% flash.now[:alert] = "error occured"%>
    <%end%>
  <%end%>
</div>
