<div class="container my-4">
  <h2 class="text-center my-4">LOgin to iStore</h2>
  <%= form_with(scope: :session, url: login_path, local: true, html: { class: 'd-flex flex-column align-items-center' }) do |f| %>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :username %>
      <%= f.text_field :username, class: 'form-control'%>
    </div>
    <div class="form-group mb-3 col-md-6">
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control'%>
    </div>
    <div class="form-group mb-3 col-md-6">
      <%= f.check_box :staff_login %>
      <%= f.label :staff_login, class: "checkbox-label" do %>
        Staff Login
      <% end %>
    </div>
    <%= f.submit "Login", class: 'btn btn-primary'%>
  <%end%>
</div>
