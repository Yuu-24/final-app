<nav class="navbar navbar-expand-lg navbar-dark bg-dark pr-0 sticky-top">
  <%= link_to 'iStore', root_path, class: 'navbar-brand'%>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if !logged_in?%>
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">About</a>
        </li>
      <%elsif session[:is_staff] == 1%>
        <li class="nav-item active">
          <%= link_to 'Me', staff_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Staff', staffs_path, class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Orders', orders_staff_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Stock', stock_staff_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
      <%else%>
        <li class="nav-item active">
          <%= link_to 'Me', customer_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Cart', cart_customer_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Past Orders', history_customer_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
        <li class="nav-item active">
          <%= link_to 'Inventory', inventory_customer_path(current_user), class: 'nav-link', aria: { current: true } %>
        </li>
      <%end%>
    </ul>
    <div class="d-flex flex-row-reverse">
      <% if request.path != signup_path && !logged_in?%>
        <%= link_to 'SignUp', signup_path, class: 'nav-link btn btn-success btn-sm mx-2'%>
      <%end%>
      <% if request.path != login_path && !logged_in?%>
        <%= link_to 'LogIn', login_path, class: 'nav-link btn btn-success btn-sm mx-2'%>
      <%end%>
      <% if logged_in?%>
        <%= link_to 'LogOut', logout_path, method: :delete, class: 'nav-link btn btn-success btn-sm mx-2',style: 'font-size: 12px; padding: 5px 5px;'%>
      <%end%>
    </div>
  </div>
</nav>
